test_42() {
    (   # Create a subshell to manage errors
        set -e
        echo "\n---- C Lang 42 Tester  ----"
        echo "## norminette ##";
        norminette
        echo ""
        echo "## compilation ##"
        cc -o exe.o *.c # WARN:work only for one file at the moment
        echo "## compilation -> OK ##"
        echo ""
        echo "## Run file -> exe.o ##" 
        ./exe.o
        echo "\n"
    )
}

mkcd() {
    mkdir -p "$1"
    cd "$1"
}

git_remote_change() {
	git remote add "$1" "$2"
	git remote set-url "$1" "$2"
}
